<% provide(:title, 'Register') %>



<div class="center hero-unit">
  <h2 class="font-blue-color">Register </h2>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <div class="clear">&nbsp; </div>
     <div class="offset1"> <%= f.submit "Sign Up", class: "btn btn-small btn-primary" %></div><div class="offset2"> <p>Already have account ? <%= link_to "Signin!", root_path %></p></div>
    <% end %>
  </div>
</div>
</div>



