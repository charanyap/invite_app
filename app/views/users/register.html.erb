<% provide(:title, 'Register') %>



<div class="center hero-unit">
  <h1>Welcome</h1>
  <h2>Register </h2>

  <%= link_to "Login!", root_path, class: "btn btn-small btn-primary " %>

  <div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-small btn-primary" %>
    <% end %>
  </div>
</div>
</div>



